<!-- Navigation bar template -->
<header id="navbar"><span class="animation" style="--i:1;"></span>
    <div class="navbar" style="<% if(user) { %> padding-top: 20px;padding-bottom: 20px;<% } %>">
        <a href="<%= user == null ? '/' : (user.role === 'admin' ? '/dashboard' : '/') %>" class="logo"><img src="../assets/logo_mcd.png"></a>
        <ul class="center-navbar">
            <li><a href="/">Home</a></li>
            <li><a href="/order">Order</a></li>
            <li><a href="/locations">Locations</a></li>
            <li><a href="/about">About</a></li>
            <% if (title == "McDini - Order") { %>
                <div class="searchBar" style="top: 30px; position: fixed; right: 26%;">
                    <input type="text" style="font-size: 12pt; height: 40px; border-radius: 8px; padding: 0 10px; width: 180px;" placeholder="Search...">
                </div>
            <% } %>
        </ul>
        <div style="<% if(user) { %>
            padding-top: 0px;
            <% } else { %>
            padding-top: 40px;
            <% } %>">

            <ul class="right-navbar">
                <% if(user) { %>
                    <li id="profile">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M399 384.2C376.9 345.8 335.4 320 288 320H224c-47.4 0-88.9 25.8-111 64.2c35.2 39.2 86.2 63.8 143 63.8s107.8-24.7 143-63.8zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zm256 16a72 72 0 1 0 0-144 72 72 0 1 0 0 144z"/></svg>
                        <span id="username"><%= user.username %></span>
                    </li>
                    <li><a href="/logout" class="logout-link">Logout</a></li>
                <% } else { %>
                    <li><%- include("../login") %></li>
                    <li><%- include("../signup") %></li>
                    <% } %>
            </ul>         
        </div>
    </div>
</header>

